    	</file>
    	<file path="layout-menu.html" custom="0">
    		<description locale="en_US">App hidden menu content</description>
    		<description locale="ru_RU">Содержимое «скрытого меню» приложения</description>
    	</file>
        <file path="login.html" custom="0">
            <description locale="en_US">Login page</description>
