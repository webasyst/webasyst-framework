<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE theme PUBLIC "wa-app-theme" "http://www.webasyst.com/wa-content/xml/wa-app-theme.dtd">
<theme id="default" system="1" vendor="webasyst" author="Webasyst" app="blog" version="1.1.0">
    <name locale="en_US">Default</name>
    <name locale="ru_RU">Дефолт</name>
    <files>
        <file path="index.html" custom="0">
			<description locale="en_US">Common layout</description>
			<description locale="ru_RU">Основной макет</description>
        </file>
		<file path="default.css">
			<description locale="en_US">Core CSS file</description>
			<description locale="ru_RU">Основной файл CSS-стилей</description>
		</file>
		<file path="mobile.css">
			<description locale="en_US">Additional CSS for multi-touch mobile devices</description>
			<description locale="ru_RU">Дополнительный CSS для мобильных устройств</description>
		</file>      
        <file path="sidebar.html" custom="0">
            <description locale="en_US">Blog navigation sidebar</description>
            <description locale="ru_RU">Навигация по блогу</description>
        </file>
        <file path="stream.html" custom="0">
            <description locale="en_US">Post stream wrapper</description>
            <description locale="ru_RU">Обертка для страницы вывода списка записей</description>
        </file>
        <file path="stream_search.html" custom="0">
            <description locale="en_US">Post search (filtering) results, e.g. custom search, by tag, by author</description>
            <description locale="ru_RU">Результат поиска (фильтрации) записей, например, по тегу или автору</description>
        </file>
        <file path="stream_posts.html" custom="0">
            <description locale="en_US">Default post list view mode</description>
            <description locale="ru_RU">Основной вид списка записей блога</description>
        </file>
        <file path="post.html" custom="0">
            <description locale="en_US">Post page</description>
            <description locale="ru_RU">Страница одной записи блога</description>
        </file>
        <file path="page.html" custom="0">
            <description locale="en_US">Static info page</description>
            <description locale="ru_RU">Информационная страница</description>
        </file>
        <file path="comments.html" custom="0">
            <description locale="en_US">Post comment list</description>
            <description locale="ru_RU">Комментарии к записи блога</description>
        </file>
        <file path="comment.html" custom="0">
            <description locale="en_US">One comment template</description>
            <description locale="ru_RU">Вывод одного комментария из списка</description>
        </file>
        <file path="login.html" custom="0">
            <description locale="en_US">Login page</description>
            <description locale="ru_RU">Страница входа для пользователей</description>
        </file>
        <file path="signup.html" custom="0">
            <description locale="en_US">Sign up page</description>
            <description locale="ru_RU">Страница регистрации пользователей</description>
        </file>
        <file path="forgotpassword.html" custom="0">
            <description locale="en_US">Forgot password page</description>
            <description locale="ru_RU">Страница сброса пароля</description>
        </file>
        <file path="error.html" custom="0">
            <description locale="en_US">404 and other errors</description>
            <description locale="ru_RU">404 и другие ошибки</description>
        </file>
    </files>
    <settings>
        <setting var="nav_bg_color" control_type="color">
            <value>#000000</value>
            <name locale="en_US">Top navigation menu background color</name>
            <name locale="ru_RU">Цвет фона верхнего навигационного меню</name>
        </setting>
        <setting var="nav_text_color" control_type="color">
            <value>#CCCCCC</value>
            <name locale="en_US">Top navigation menu text color</name>
            <name locale="ru_RU">Цвет ссылок в верхнем навигационном меню</name>
        </setting>
    </settings>
</theme>
