.t-calendar-place
        $actions_h = 48px

        position relative
        overflow hidden
        padding 0 0 $actions_h

        &.is-short
            height ( 6.5rem * 2 ) + 26

            .t-actions-wrapper
                .t-action
                    &.t-calendar-toggle
                        svg
                            transform rotate(0deg)

        .t-calendar-wrapper
            .t-labels-wrapper
                background #cec

                table
                    .t-column
                        color #aaa

        .t-actions-wrapper
            position absolute
            bottom 0
            left 0
            width 100%
            height $actions_h
            background #fff
            background: linear-gradient(to bottom,  rgba(255,255,255,0) 0%,rgba(255,255,255,1) 50%,rgba(255,255,255,1) 100%);

            text-align center
            font-size (13/16)em
            line-height $actions_h
            cursor pointer

            .t-layout
                table-layout fixed
                .t-column
                    &.right
                        padding-right 1em

            .t-action
                display inline-block
                vertical-align middle
                line-height 16px

                .icon16
                    vertical-align top
                    margin 0 4px 0 0

                &.t-calendar-toggle
                    position relative
                    color #888

                    svg
                        transform rotate(180deg)

    .t-profile-tabs
        border 1px solid #ddd
        box-shadow: 0 2px 9px rgba(0, 0, 0, 0.2);

        // hide contacts-pro tabs that don't make sense
        [data-tab-id="events"], [data-tab-id="notes"], [data-tab-id="pro-plugin"]
            display: none;

    .t-profile-tabs-iframes
        iframe
            width 100%
            border 0
.t-activity-wrapper
    .t-no-activity
        padding 1em

    .t-activity-list
        margin 0
        padding 0 0 0 12px
        $icon_w = 16px
        $icon_top = 13px
        $pane_w = 2px
        $pane_c = #ccc

        & > li
            list-style none

        .t-space-wrapper
            position relative
            border-left $pane_w dashed $pane_c
            padding 10px 0 10px 20px
            margin 0 0 0 10px
            height 36px

        .t-month-wrapper
            margin 20px 0 4px

            & + .t-activity-item
                &:before
                    display block
                    background #fff;

        .t-activity-item
            position relative
            border-left $pane_w solid $pane_c
            padding 10px 0 10px 20px
            margin 0 0 0 10px

            &:before
                display none
                content ""
                position absolute
                top 0
                left (-($pane_w))
                width $pane_w
                height ( $icon_top + ($icon_w/2))

            &.is-first
                &:before
                    display block
                    background #fff;

            &.is-last
                border-color transparent
                &:before
                    display block
                    background $pane_c;

            &:last-child
                border-color transparent
                &:before
                    display block
                    background $pane_c;

            &.is-last.is-first
                border-color transparent
                &:before
                    display none

            &:first-child
                $_lift = 16px
                padding-top (10 + $_lift)

                &.is-last
                    &:before
                        height ( $icon_top + ($icon_w/2) ) + $_lift

                .t-activity-point
                    top (13 + $_lift)

            .t-activity-point
                position absolute
                top $icon_top
                left (($icon_w + $pane_w)/-2)
                width $icon_w
                height $icon_w
                border-radius 50%
                background #f8f8f8
                border 1px solid rgba(0,0,0,.05)
                box-sizing border-box

            .t-activity-block
                .t-datetime
                    margin: 4px 0 0

                .t-app
                .t-username
                .t-action
                .activity-target
                    display inline
                    vertical-align baseline
                    box-sizing border-box
                    margin 0 4px 0 0

                .t-app
                    display inline-block
                    padding: 3px 6px
                    border-radius 2px
                    border: 1px solid rgba(0,0,0,.05)
                    color: #fff

                .activity-body
                    margin 4px 0 0
                    p
                        margin: .5em 0 0

                        &:first-child
                            margin-top 0

                .activity-target
                    font-weight: bold

                .activity-photo-wrapper
                    margin: 6px 0 0
                    padding 0
                    list-style none

                    .activity-photo-list
                        .photo-item
                            display inline-block
                            vertical-align top
                            width: 96px
                            margin: 2px 4px 2px 0
                            padding 0
                            text-align center

                            img
                                display inline-block
                                vertical-align middle
                                max-width 100%
                                max-height 96px
                                box-sizing border-box
                                border-radius 2px

    .t-paging-wrapper
        margin 0
        padding 1em 2rem
        color #888

        .icon16
            position relative
            top -1px
            margin 0 4px 0 0

