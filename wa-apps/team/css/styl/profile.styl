.t-profile-blocks
    display: flex;
    flex-wrap: wrap;
    margin: 16px -8px 0;

    @media (max-width: 768px)
        margin: 16px 0 0;

.t-profile-block
    box-sizing: border-box;

    position: relative;
    overflow: hidden;

    width: calc(50% - 16px);
    min-height: 64px;
    background-color: var(--background-color);
    border-radius: 12px;
    padding: 10px 50px 10px 10px;
    margin: 16px 8px 0;

    @media (max-width: 768px)
        width: 100%;
        margin: 16px 0 0;

    &_map
        flex-grow: 1;

    &__icon
        display: flex;
        justify-content: flex-end;

        position: absolute;
        top: 16px;
        right: 15px;

        width: 26px;
        height: 26px;
        font-size: 1.3rem;

    &__value
        &-link
            word-break: break-all;

    &__type
        color: var(--text-color-hint);
        font-size: .8125rem;

    &__map
        position: absolute;
        top: 0;
        right: 0;
        bottom: 0;
        left: 0;

        #map
            height: 100%;

