            box-sizing border-box
            white-space nowrap
            text-overflow ellipsis
            overflow: hidden
            color $link_c

            &:hover
                color $link_c !important

            .is-bold
                font-weight bold

            .icon16
                position relative
                top 3px
                margin-right 5px
                vertical-align baseline

            &:after
                $_icon_w = 8px
                $_icon_h = 6px

                content: "";
                position: absolute;
                top: 50%;
                right: 15px;
                width: 0;
                height: 0;
                margin (-($_icon_h/4)) (-($_icon_w/2)) 0 0
                border solid transparent
                border-width $_icon_h ($_icon_w/2)
                border-top-color #7c878c

        .menu-v
            width: 250px
            max-height 200px
            overflow auto

            li
                a
                    padding: 6px 8px 6px 24px;
                    margin: -6px -8px -6px -24px;

                    b
                        font-weight normal

                    i
                        font-style normal

