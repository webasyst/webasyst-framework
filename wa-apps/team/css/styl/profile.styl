.t-profile-page
    @media screen and (min-width: 760px)
        display: grid;
        grid-template-columns: 1fr auto;
        grid-template-rows: 1fr;
    .t-profile
        overflow hidden
        .t-profile-users
            position relative
            background-color: var(--background-color);
            display flex
            justify-content center
            align-items center
            padding 0
            list-style none
            margin 0
            max-width 100vw
            box-sizing border-box
            .t-profile-users-item
                display inline-flex
                padding .5em
                box-sizing: border-box;
                max-width 3rem
                &.selected
                &:hover
                    background-color: var(--list-item-selected-background-color)
            .t-profile-users-nav
                width: 3rem
                height: 3rem
                display grid
                place-items center
                background-color var(--background-color);
                cursor pointer
                position absolute
                z-index 2
                color var(--gray)
                outline none
                &.right
                    right 0
                &.left
                    left 0
                &.hidden
                    display none
                &.swiper-button-disabled
                    color var(--border-color-soft)

        .t-profile-user-slider
            position relative
            &:hover
                .nav-arrows
                    opacity: 1;
            .t-profile-user-slide
                min-height 13.75em
                position relative
                background-size: cover
                background-position: center
                flex-shrink: 0
                transition-property: transform
                &:hover
                    img
                        filter brightness(.8)
                        transition filter linear 300ms
                    .camera-overlay
                        opacity 1
                .camera-overlay
                    opacity 0
                    font-size:5em
                    display grid
                    place-items center
                    position absolute
                    width 100%
                    height 100%
                    color var(--white)
                    left 0
                    top 0
                    transition opacity linear 300ms
                    background-color rgba(0,0,0, .2)
            .nav-arrows
                position absolute
                top 0
                bottom 0
                width 3.5em
                z-index: 1
                display grid
                place-items center
                cursor pointer
                color var(--white)
                opacity: 0;
                transition: opacity var(--timing-fast);
                &.right
                    right 0
                    background: linear-gradient(270deg, rgba(0, 0, 0, 0.2) 0%, rgba(0, 0, 0, 0) 100%);
                &.left
                    left 0
                    background: linear-gradient(90deg, rgba(0, 0, 0, 0.2) 0%, rgba(0, 0, 0, 0) 100%);
                &.is-disabled
                    color rgba(255, 255, 255, .4)
            .nav-bullets
                position absolute
                display flex
                justify-content space-between
                align-items center
                flex-grow 1
                z-index 1
                gap 1em
                background: linear-gradient(180deg, rgba(0, 0, 0, 0.2) 0%, rgba(0, 0, 0, 0) 100%);
                top 0
                bottom auto
                left 0
                padding 0.5rem
                box-sizing border-box
                &:empty
                    display none;
                .nav-bullet
                    display flex
                    flex-grow: 1;
                    height .25rem;
                    background: var(--white);
                    opacity: 0.4;
                    border-radius: .625rem;
                    &.is-active
                        opacity: 0.8

        .t-profile-user-info
            padding .875em 3em

            .t-profile-user-info-bar
                display flex

                @media (max-width: 1440px)
                    display: grid;
                    grid-template-columns: max-content 1fr;
                    grid-template-areas: "avatar buttons" "info info";

                .t-profile-userpic
                    grid-area: avatar;

                    position relative
                    display flex
                    flex-wrap: wrap
                    margin-top -3.5em
                    margin-right 1em
                    column-gap: 1.25em;
                    z-index 1

                    .userpic
                        box-shadow: 0 0 0 0.25em var(--background-color-blank)
                        &:hover
                            img
                                filter brightness(.8)
                                transition filter linear 300ms
                            .camera-overlay
                                opacity 0.6
                                cursor pointer
                        .camera-overlay
                            opacity 0
                            font-size:5em
                            display grid
                            place-items center
                            position absolute
                            width 100%
                            height 100%
                            color var(--white)
                            left 0
                            top 0
                            transition opacity linear 300ms


                .t-profile-user-data
                    grid-area: info;

                    @media (max-width: 1440px)
                        margin-top: 16px;

                    h2
                     margin-bottom .625rem

                .t-profile-actions-btn
                    grid-area: buttons;
                    margin-left auto
                    display: flex;
                    align-items: flex-start;
                    font-size: 14px;

                    @media (max-width: 768px)
                        font-size: 16px;

            .t-profile-user-info-block
                margin-top 1.25rem
                padding-bottom 2.25rem
                .t-profile-user-details
                    padding 0
                    margin 0 0 1.3125rem 0
                    list-style none
                        &.login
                            color var(--menu-glyph-color-hover)
                            font-weight: bold
                        &.jobtitle
                            color var(--menu-glyph-color-hover)
                            font-size: .875rem
                            font-weight: 400
                            .input-editable
                                width auto !important
                        &.socialnetwork
                            .fa-twitter
                                color #1DA1F2
                            .fa-facebook-f
                                color #4267B2
                            .fa-vk
                                color #2787f5
                            .fa-linkedin-in
                                color #2867B2
                .fields-group
                    p
                        margin 0;
                .view-mode
                    .subname
                    .jobtitle-company
                    [data-field-id="email"]
                    [data-field-id="phone"]
                    [data-field-id="im"]
                        display none
                    [data-field-id="socialnetwork"]
                        .fa-twitter
                            color #1DA1F2
                        .fa-facebook-f
                            color #4267B2
                        .fa-vk
                            color #2787f5
                        .fa-linkedin-in
                            color #2867B2

            .t-profile-user-info-activity
                .t-activity
                    padding-left 0.625rem
                    list-style none
                    .t-activity-item
                        display flex
                        flex-direction column
                        padding 0 0 1.25rem 1.375rem
                        position relative
                        p
                            margin 0
                        .t-app-badge
                            margin-top -.15rem
                            .badge
                                margin-right .5rem
                        .t-activity-point
                            position absolute
                            left: -0.925rem
                            top: -0.395rem
                            display: block
                            width: 1.25em
                            height: 1.25em
                            border-radius: 50%
                            background: var(--red)
                            border  6px solid var(--background-color-blank)
                        &:not(:last-child):not(.is-last)
                            border-left 1px solid var(--border-color-hr)
                            .activity-photo-wrapper
                                .activity-photo-list
                                    display flex
                                    flex-wrap wrap
                                    gap 1rem
                                    margin-top: .5rem;
                                    .photo-item
                                        img
                                            border-radius 0.25rem
                    .t-month-wrapper
                        margin-bottom 1.5rem
                        margin-left -.625rem;


